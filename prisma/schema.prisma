generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id       Int     @id @default(autoincrement())
  name     String
  email    String  @unique
  password String
  role     Role    @default(REPORTER)
  bugs     Bug[]
}

model Bug {
  id          Int      @id @default(autoincrement())
  title       String
  description String
  severity    Severity
  status      Status   @default(OPEN)
  reporter    User     @relation(fields: [reporterId], references: [id])
  reporterId  Int
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

enum Role {
  REPORTER
  ADMIN
}

enum Severity {
  LOW
  MEDIUM
  HIGH
}

enum Status {
  OPEN
  IN_PROGRESS
  CLOSED
}
